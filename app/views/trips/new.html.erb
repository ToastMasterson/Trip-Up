<h1>Create a New Trip</h1>

<%= form_for @trip do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.collection_select :category_id, Category.all, :id, :name %>
    <%= f.collection_select :location_id, Location.all, :id, :name %>

  <%= f.submit "create trip" %>
<% end %>